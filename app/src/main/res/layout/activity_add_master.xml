<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_add_master"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    tools:context="com.vanderveldt.rens.rensvanderveldt_pset5.addMaster">

    <TextView
        android:text="Please enter a name for your list:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="List name"
        android:gravity="center"
        android:padding="4dp"
        android:background="@drawable/edittextstyle"
        android:ems="10"
        android:id="@+id/masterTitleED"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="Save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/masterTitleED"
        android:layout_centerHorizontal="true"
        android:id="@+id/button"
        android:onClick="saveMaster"/>

</RelativeLayout>
